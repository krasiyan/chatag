{
  "dest": {
    "build": "build/{version}",
    "watch": "build/current",
    "link": "public/release"
  },
  "assets": [
    {
      "src": "client/vendor/**/*.+(js|css|html)",
      "dest": "vendor"
    }
  ],
  "js": {
    "src": "client/apps/**/*.bundle.js",
    "webpack": "dna/client/webpack.config.js"
  },
  "css": {
    "src": "client/apps/**/*.bundle.css"
  }
}